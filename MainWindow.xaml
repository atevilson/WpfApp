<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfApp.Views"
        Title="Sistema de Cadastro" Height="600" Width="800">
    <TabControl x:Name="MainTabControl">
        <TabItem Header="Pessoas">
            <views:CadastroDePessoas x:Name="PessoasView" />
        </TabItem>
        <TabItem Header="Produtos">
            <views:CadastroDeProdutos x:Name="ProdutosView" />
        </TabItem>
        <TabItem Header="Pedidos">
            <views:CadastroDePedidos x:Name="PedidosView"/>
        </TabItem>
    </TabControl>
</Window>
